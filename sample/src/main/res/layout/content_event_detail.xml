<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" >

    <!-- http://stackoverflow.com/questions/32947440/android-data-binding-using-include-tag -->
    <data>
        <import type="android.view.View" />
        <variable name="event" type="com.github.droibit.rxconnpass.Event" />
        <variable name="listener" type="com.github.droibit.rxconnpass.app.ui.view.EventDetailView.Binding" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_sub_header_height"
                android:background="@color/colorPrimaryDark" >

            <TextView
                    android:id="@+id/catch_copy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/list_side_space"
                    android:layout_marginRight="@dimen/list_side_space"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@{event.getHasCatchcopy() ? event.catchcopy : @string/empty_catchcopy}"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    tools:text="KotlinかわいいよKotlin" />

        </FrameLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_size">

            <ImageView
                    android:id="@+id/event_date_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_side_space"
                    android:layout_marginRight="@dimen/list_side_medium_space"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/vector_event_date"
                    tools:src="@drawable/vector_event_date" />

            <TextView
                    android:id="@+id/event_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/event_date_icon"
                    android:layout_toLeftOf="@+id/event_participants_icon"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/empty"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    app:startedAt="@{event.startedAt}"
                    app:endedAt="@{event.endedAt}"
                    tools:text="2016/01/01(月) 10:00 -\n2016/01/02(火) 10:00" />

            <ImageView
                    android:id="@+id/event_participants_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_side_space"
                    android:layout_marginRight="@dimen/list_side_medium_space"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/event_participants"
                    app:srcCompat="@drawable/vector_event_participants"
                    tools:src="@drawable/vector_event_participants" />

            <TextView
                    android:id="@+id/event_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/list_side_space"
                    android:singleLine="true"
                    android:text="@string/empty"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    app:accepted="@{event.accepted}"
                    app:limit="@{event.limit}"
                    tools:text="10 / 20" />

        </RelativeLayout>

        <View style="@style/Border" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/event_place_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/detail_item_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/list_side_space"
                    android:layout_marginRight="@dimen/list_side_medium_space"
                    android:scaleType="center"
                    app:srcCompat="@drawable/vector_event_place"
                    tools:src="@drawable/vector_event_place" />

            <TextView
                    android:id="@+id/event_place"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_item_size"
                    android:layout_toRightOf="@+id/event_place_icon"
                    android:layout_marginRight="@dimen/list_side_space"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@{event.ownerDisplayName}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="?android:textColorSecondary"
                    app:address="@{event.address}"
                    app:place="@{event.place}"
                    tools:text="東京都台東区上野七丁目 上野駅" />

            <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_map_height"
                    android:layout_below="@id/event_place_icon"
                    android:visibility="@{event.getHasLatLon() ? View.VISIBLE : View.GONE}"
                    app:cameraZoom="@integer/default_map_camera_zoom"
                    app:liteMode="true"
                    app:mapType="normal"
                    app:onMapReady="@{listener}" />

        </RelativeLayout>

        <View style="@style/Border" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/event_owner_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/detail_item_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/list_side_space"
                    android:layout_marginRight="@dimen/list_side_medium_space"
                    android:scaleType="center"
                    app:srcCompat="@drawable/vector_event_owner"
                    tools:src="@drawable/vector_event_owner" />

            <TextView
                    android:id="@+id/event_owner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_item_size"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/event_owner_icon"
                    android:layout_toLeftOf="@+id/event_owner_web_icon"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@{event.ownerDisplayName}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="?android:textColorSecondary"
                    tools:text="droibit" />

            <ImageView
                    android:id="@+id/event_owner_web_icon"
                    android:layout_width="@dimen/detail_item_size"
                    android:layout_height="@dimen/detail_item_size"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/list_side_space"
                    android:layout_marginRight="@dimen/list_side_space"
                    android:scaleType="center"
                    android:clickable="true"
                    app:srcCompat="@drawable/vector_event_web"
                    tools:src="@drawable/vector_event_web" />

            <!-- TODO: 主催者のイベントリストを表示 -->

        </RelativeLayout>

    </LinearLayout>
</layout>